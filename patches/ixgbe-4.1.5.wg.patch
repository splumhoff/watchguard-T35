-	then
-		MASK_FILL=""
-		MASK_ZERO="00000000"
-		let "IDX = $VEC / 32"
-		for ((i=1; i<=$IDX;i++))
-		do
-			MASK_FILL="${MASK_FILL},${MASK_ZERO}"
-		done
-
-		let "VEC -= 32 * $IDX"
-		MASK_TMP=$((1<<$VEC))
-		MASK=$(printf "%X%s" $MASK_TMP $MASK_FILL)
-	else
-		MASK_TMP=$((1<<$VEC))
-		MASK=$(printf "%X" $MASK_TMP)
-	fi
